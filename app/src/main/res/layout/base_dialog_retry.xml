<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/md_white"
    app:cardCornerRadius="@dimen/_8asdp"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/ivMessageType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_16asdp"
            android:src="@drawable/ic_failure" />

        <com.mvproomarchiticture.ui.common.widgets.fonts.FontTextView
            android:id="@+id/title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/base_dialog_24"
            android:paddingRight="@dimen/base_dialog_24"
            android:paddingTop="@dimen/base_dialog_24"
            android:text="Success"
            android:textColor="@color/color_363636"
            android:textSize="@dimen/_24asdp" />

        <com.mvproomarchiticture.ui.common.widgets.fonts.FontTextView
            android:id="@+id/description_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/base_dialog_24"
            android:textColor="@color/colorPrimaryDark"
            tools:text="You don't have enough tokens" />

     <!--   <com.mvproomarchiticture.ui.common.widgets.fonts.FontButton
            android:id="@+id/btnOkay"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_16asdp"
            android:layout_marginBottom="@dimen/_8asdp"
            android:text="@string/lbl_retry" />-->

    </LinearLayout>
</android.support.v7.widget.CardView>